{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="font-bold text-4xl mt-[75px] mb-12">Connectez-vous !</h1>
    <div class="w-[740px] mx-auto">
        <div class="flex flex-col">   
            <label for="inputPseudo" cla>Pseudo</label>
            <input type="text" value="{{ last_username }}" name="pseudo" id="inputPseudo" class="form-control border-2 border-solid border-black focus:border-orange-300 rounded-lg" autocomplete="username" required autofocus>
        </div>
        <div class="flex flex-col">
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control border-2 border-solid border-black focus:border-orange-300 rounded-lg" autocomplete="current-password" required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button class="btn btn-lg btn-primary mt-11 bg-button p-4" type="submit">Se connecter</button>
    </div>
    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}


</form>
{% endblock %}
