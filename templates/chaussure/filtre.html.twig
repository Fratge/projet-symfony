{% extends 'base.html.twig' %}

{% block title %}Liste Chaussures{% endblock %}

{% block body %}
    <div class="bg-image flex items-center justify-center">
        <h1 class="font-bold text-white text-6xl">Liste des chaussures</h1>
    </div>
    <section class="mt-24">
        <p>Nombre de chaussures : {{ nbChaussures }}</p>
        {% for chaussure in chaussures %}

        <img src="{{ chaussure.image }}" class="w-40 h-40">
        <p>{{ chaussure.nom }}</p> 
        <p>{{ chaussure.prix }}</p> 
        <a href="{{ path('app_chaussure_show', {'id': chaussure.id}) }}">Afficher</a>
        
        {% endfor %}

    </section>
    <h2>Filtres :</h2>
        <ul>
        {% for filtre in filtres %}
            <li>
                <a href="{{ path('app_chaussure_filtre', {'id': filtre.id}) }}">{{ filtre.nom }}</a>
            </li>
        {% endfor %}
        </ul>
{% endblock %}
